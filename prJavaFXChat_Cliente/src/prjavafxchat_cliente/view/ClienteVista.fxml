                   layoutX="21.0" layoutY="26.0"
                   text="Nombre:" />
            <Label fx:id="salaLb"
                   layoutX="275.0" layoutY="26.0"
                   text="Sala:" />
            <TableView fx:id="tablaUsuarios"
                       layoutX="591.0" layoutY="22.0"
                       prefHeight="344.0" prefWidth="305.0"
                       columnResizePolicy="CONSTRAINED_RESIZE_POLICY">
                <columns>
                    <TableColumn fx:id="colNombre" text="Nombre:" />
                    <TableColumn fx:id="colRol" text="Rol:" />
                </columns>
            </TableView>
         </children>
      </Pane>
   </children>
</AnchorPane>
