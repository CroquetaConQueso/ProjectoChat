<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="451.0" prefWidth="924.0"
            xmlns="http://javafx.com/javafx/21.0.9"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="prjavafxchat_cliente.controller.ClienteVistaController">
   <children>
      <Pane layoutX="-1.0" layoutY="-1.0" prefHeight="451.0" prefWidth="924.0">
         <children>
            <TextField fx:id="entradaField"
                       layoutX="21.0" layoutY="405.0"
                       prefHeight="26.0" prefWidth="816.0" />
            <TextArea fx:id="mensajesArea"
                      layoutX="21.0" layoutY="60.0"
                      prefHeight="298.0" prefWidth="508.0" />
            <Button layoutX="844.0" layoutY="405.0"
                    mnemonicParsing="false"
                    onAction="#enviarMensajeAction"
                    prefHeight="26.0" prefWidth="54.0"
                    text="Enviar" />
            <ChoiceBox fx:id="salasChoiceBox"
                       layoutX="304.0" layoutY="22.0"
                       prefWidth="150.0" />
            <TextField fx:id="nombreField"
                       layoutX="77.0" layoutY="22.0" />
